{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "."
  },
  "include": [
    "index.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "services/**/*.ts",
    "types/**/*.d.ts"
  ]
}
