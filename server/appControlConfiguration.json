{
  "lineJoiner": false,
  "translation": {
    "translationMode": "sequential",
    "sourceLang": "ko",
    "targetLang": "en",
    "segmentMode": "paragraph",
    "window": 1,
    "contextPolicy": {
      "verbatimMax": 300,
      "summaryMax": 120,
      "mode": "hybrid"
    },
    "stageParameters": {
      "draft": {
        "verbosity": "medium",
        "reasoningEffort": "medium",
        "maxOutputTokens": 2200
      },
      "revise": {
        "verbosity": "medium",
        "reasoningEffort": "low",
        "maxOutputTokens": 1800
      },
      "micro-check": {
        "verbosity": "low",
        "reasoningEffort": "minimal",
        "maxOutputTokens": 900
      }
    },
    "register": "literary",
    "honorifics": "preserve",
    "romanizationPolicy": "as-is",
    "creativeAutonomy": "light",
    "batching": {
      "batchSize": 8,
      "workerConcurrency": 2,
      "apiRateLimitTPS": 2
    },
    "tokenBudget": {
      "promptMax": 3000,
      "completionMax": 900
    },
    "proofread": {
      "topK": 7,
      "minSeverity": "medium",
      "autoApplySafeFixes": false
    }
  }
}
